----Ejercicio 2
#!/bin/bash
if -n then
    read -p "Introduce el nombre del directorio" nombredir
    if test -d $nombredir then
        mkdir $nombredir
    else
        "El directorio ya existe"
    fi
else
    echo "Tienes que introducir un nombre"
fi
